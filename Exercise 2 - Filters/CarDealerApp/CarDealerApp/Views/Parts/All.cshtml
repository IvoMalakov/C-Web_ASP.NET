@model IEnumerable<CarDealer.Models.ViewModels.PartViewModel>

@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Customers</h2>

<p>
    @Html.ActionLink("Add New Part", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier)
            </td>
            <td>
                <a class="btn btn-success" href="~/Parts/Edit/@item.Id" style="margin-right: 10px; width: 75px">Edit</a>
                <a class="btn btn-danger" href="~/Parts/Delete/@item.Id" style="width: 75px">Delete</a>
            </td>
        </tr>
    }

</table>
