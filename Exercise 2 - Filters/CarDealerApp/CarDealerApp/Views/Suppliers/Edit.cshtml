@model CarDealer.Models.ViewModels.EditSupplierViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_LoggedUser.cshtml";
}

<style>
     .buttons {
         margin: auto 10px auto 10px;
         width: 100px;
         padding: 5px;
     }
</style>

<h1 style="text-transform: uppercase" class="text-capitalize text-center text-primary">Edit a Supplier's info</h1>

<form method="POST">
    <input type="number" name="Id" value="@Model.Id" hidden="hidden"/>
    <div class="form-group">
        <label for="Name" class="col-form-label">Supplier name: </label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name"/>
    </div>
    <div class="form-group">
        <label for="IsImporter" class="col-form-label">Is importer: </label>
        <select name="IsImporter" id="IsImporter" class="form-control">
            @{
                if (@Model.IsImporter)
                {
                    <option value="true" selected="selected">Yes</option>
                    <option value="false">No</option>
                }
                else
                {
                    <option value="true">Yes</option>
                    <option value="false" selected="selected">No</option>
                }
            }
        </select>
    </div>
    <br/>
    <a class="btn btn-danger buttons" href="~/suppliers/">Cancel</a>
    <input type="submit" class="btn btn-success buttons" value="Edit Supplier"/>
</form>