@model CarDealer.Models.EntityModels.Supplier

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout_LoggedUser.cshtml";
}

<style>
    .buttons {
        margin: auto 10px auto 10px;
        width: 100px;
        padding: 5px;
    }
</style>

<h1 style="text-transform: uppercase" class="text-capitalize text-center text-primary">Add new Supplier</h1>

<form method="POST">
    <div class="form-group">
        <label for="Name" class="col-form-label">Supplier name: </label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter a supplier name" />
    </div>
    <div class="form-group">
        <label for="IsImporter" class="col-form-label">Is importer: </label>
        <select id="IsImporter" name="IsImporter" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <br/>
    <a class="btn btn-danger buttons" href="~/suppliers/">Cancel</a>
    <input type="submit" class="btn btn-success buttons" value="Add Supplier" />
</form>