@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .buttons {
        margin: auto 10px auto 10px;
        width: 100px;
        padding: 5px;
    }
</style>

<h1 style="text-transform: uppercase" class="text-capitalize text-center text-primary">Add new User to Database</h1>

<form method="POST">
    <div class="form-group">
        <label for="Username" class="col-form-label">User name: </label>
        <input type="text" pattern=".{3,}" class="form-control" id="Username" name="Username" placeholder="User name" />
    </div>
    <div class="form-group">
        <label for="Email" class="col-form-label">User email: </label>
        <input type="email" class="form-control" id="Email" name="Email" placeholder="User email" />
    </div>
    <div class="form-group">
        <label for="Password" class="col-form-label">Password: </label>
        <input type="password" class="form-control" id="Password" name="Password" placeholder="Password"/>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword" class="col-form-label">Repeat your Password: </label>
        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Password again" />
    </div>
    <br />
    <input type="submit" value="Add user" class="btn btn-success buttons" />
    <input type="reset" value="Clear" class="btn btn-danger buttons" />
</form>
