@model CarDealer.Models.EntityModels.Customer

@{
    ViewBag.Title = "TotalSales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-transform: uppercase" class="text-capitalize text-center text-primary">Total sales by customer</h1>

<table class="table table-hover table-striped">
    <thead>
        <tr class="nav-tabs text-danger">
            <th>Customer name</th>
            <th>Bought Cars</th>
            <th>Total spent money</th>
        </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Sales.Count</td>
        <td>@(@Model.Sales.Sum(s => s.Car.Parts.Sum(p => p.Price)))$</td>
    </tr>
    </tbody>
</table>
