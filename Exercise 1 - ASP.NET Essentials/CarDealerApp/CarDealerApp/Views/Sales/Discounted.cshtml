@model System.Collections.Generic.IEnumerable<CarDealer.Models.EntityModels.Sale>

@{
    ViewBag.Title = "Discounted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-transform: uppercase" class="text-capitalize text-center text-primary">List of all discounted sales</h1>

<table class="table table-hover table-striped">
    <thead>
        <tr class="nav-tabs text-danger">
            <th>Make</th>
            <th>Model</th>
            <th>Customer</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var sale in Model)
            {
                <tr>
                    <td>@sale.Car.Make</td>
                    <td>@sale.Car.Model</td>
                    <td>@sale.Customer.Name</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = sale.Id })</td>
                </tr>
            }
        }
    </tbody>
</table>
