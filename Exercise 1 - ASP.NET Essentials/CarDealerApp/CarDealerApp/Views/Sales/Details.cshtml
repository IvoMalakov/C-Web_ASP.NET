@model CarDealer.Models.EntityModels.Sale

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-transform: uppercase" class="text-capitalize text-center text-primary">Sales Details</h1>

<table class="table table-hover table-striped">
    <thead>
        <tr class="nav-tabs text-danger">
            <th>Make</th>
            <th>Model</th>
            <th>Travelled Distance</th>
            <th>Customer</th>
            <th>Price without Discount</th>
            <th>Price with Discount</th>
            <th>Discount</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Car.Make</td>
            <td>@Model.Car.Model</td>
            <td>@(@Model.Car.TravelledDistance)km</td>
            <td>@Model.Customer.Name</td>
            <td>@Model.Car.Parts.Sum(p => p.Price)</td>
            <td>@(@Model.Car.Parts.Sum(p => p.Price) - @Model.Car.Parts.Sum(p => p.Price) * @Model.Discount)</td>
            <td>@(@Model.Discount * 100)%</td>
        </tr>
    </tbody>
</table>