@using CarDealer.Models.ViewModels
@model IEnumerable<AddPartsSupplierViewModel>

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .buttons {
        margin: auto 10px auto 10px;
        width: 100px;
        padding: 5px;
    }
</style>

<h1 style="text-transform: uppercase" class="text-capitalize text-center text-primary">Add new Part to Database</h1>

<form method="POST">
    <div class="form-group">
        <label for="Name" class="col-form-label">Part name: </label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter a part name" />
    </div>
    <div class="form-group">
        <label for="prirce" class="col-form-label">Part price: </label>
        <input type="number" step="0.1" class="form-control" id="prirce" name="Price" placeholder="Enter a part price"/>
    </div>
    <div class="form-group">
        <label for="quantity" class="col-form-label">Part quantity: </label>
        <input type="number" step="1" class="form-control" id="quantity" value="1" name="Quantity" placeholder="1" />
    </div>
    <div class="form-group">
        <label for="supplier" class="col-form-label">Part supplier: </label>
        <select class="form-control" id="supplier" name="supplierId">
            @foreach (var supplier in Model)
            {
                <option value="@supplier.Id">@supplier.Name</option>
            }
        </select>
    </div>
    <br />
    <input type="submit" value="Add part" class="btn btn-success buttons" />
    <input type="reset" value="Clear" class="btn btn-danger buttons" />
</form>